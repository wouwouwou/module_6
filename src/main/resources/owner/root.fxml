<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import view.DishPagination?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:id="root"
            fx:controller="view.owner.RootController"
            stylesheets="@../stylesheet.css">

    <DishPagination fx:id="pagination"
                    AnchorPane.topAnchor="10"
                    AnchorPane.rightAnchor="10"
                    AnchorPane.bottomAnchor="10"
                    AnchorPane.leftAnchor="10"/>

    <Button fx:id="deleteButton"
            text="Delete"
            onAction="#deleteButton"
            textFill="WHITE"
            style="-fx-background-color: #FF5252;"
            prefWidth="100"
            prefHeight="50"
            AnchorPane.bottomAnchor="10"
            AnchorPane.leftAnchor="10">
        <font>
            <Font name="Ariel" size="16"/>
        </font>
    </Button>

    <HBox spacing="10"
          alignment="CENTER_RIGHT"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Button fx:id="editButton"
                text="Edit Dish"
                onAction="#editButton"
                textFill="WHITE"
                style="-fx-background-color: #FFAB40;"
                prefWidth="100"
                prefHeight="50">
            <font>
                <Font name="Ariel" size="16"/>
            </font>
        </Button>

        <Button fx:id="newButton"
                text="New Dish"
                onAction="#newButton"
                textFill="WHITE"
                style="-fx-background-color: #00E676;"
                prefWidth="100"
                prefHeight="50">
            <font>
                <Font name="Ariel" size="16"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>