<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.Rating?>
<?import javafx.scene.control.ScrollPane?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="root" hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Text fx:id="title" wrappingWidth="500"
          GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Ariel" size="20" style="-fx-font-weight: bold"/>
        </font>
    </Text>
    <Rating fx:id="rating" disable="true"
            GridPane.columnIndex="2" GridPane.columnSpan="1" GridPane.rowIndex="0" GridPane.rowSpan="1"/>
    <ImageView fx:id="image" smooth="true" preserveRatio="false" fitWidth="250" fitHeight="250"
               GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" GridPane.rowSpan="1"/>
    <ScrollPane prefWidth="250" prefHeight="250"
               GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="2" GridPane.rowSpan="1">
        <Text fx:id="description" wrappingWidth="245"/>
    </ScrollPane>
    <ListView fx:id="comments" prefWidth="250" prefHeight="250"
              GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2"/>
</GridPane>