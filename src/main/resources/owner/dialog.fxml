<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="root" hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextField fx:id="title" prefWidth="500" promptText="Title"
               GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Ariel" size="20" style="-fx-font-weight: bold"/>
        </font>
    </TextField>
    <StackPane onMouseClicked="#chooseFile"
               GridPane.columnIndex="0" GridPane.columnSpan="1" GridPane.rowIndex="1" GridPane.rowSpan="1">
        <ImageView fx:id="image" smooth="true" preserveRatio="false" fitWidth="250" fitHeight="250"/>
        <Label fx:id="imageLabel" text="Please select an image" prefWidth="250" prefHeight="250" textFill="darkgray" alignment="CENTER">
            <font>
                <Font name="Ariel" size="20"/>
            </font>
        </Label>
    </StackPane>
    <TextArea fx:id="description" prefWidth="250" prefHeight="250" promptText="Description"
              GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="1" GridPane.rowSpan="1"/>
</GridPane>